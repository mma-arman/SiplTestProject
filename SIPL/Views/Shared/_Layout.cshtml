@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ✅ jQuery -->
    <!--<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>-->
    <!-- ✅ jQuery UI CSS -->
    <!--<link rel="stylesheet"
          href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">-->
    <!-- ✅ jQuery UI JS -->
    <!--<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>-->

    <link href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>


    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet">

    <!-- ✅ Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <script src="~/Script/Common.js"></script>
    <style>
        /* Sidebar */
        #sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #e0f0ff;
            padding: 20px;
            transition: all 0.3s;
        }

            #sidebar h5 {
                font-weight: 600;
                margin-bottom: 20px;
                text-align: center;
            }

            #sidebar .nav-link {
                margin-bottom: 10px;
                padding: 10px;
                border-radius: 5px;
                font-weight: 500;
                text-align: center;
                color: #000;
                transition: all 0.2s;
            }

                #sidebar .nav-link:hover {
                    background-color: #99ccff;
                    color: #fff;
                    text-decoration: none;
                }

                #sidebar .nav-link.active {
                    background-color: #007bff;
                    color: #fff;
                }

        /* Content */
        #content {
            margin-left: 240px;
            padding: 20px;
            transition: all 0.3s;
        }

        /* Mobile responsive */
        @@media (max-width: 992px) {
            #sidebar {
                left: -240px;
                z-index: 1030;
            }

                #sidebar.active {
                    left: 0;
                }

            #content {
                margin-left: 0;
            }

            #sidebarCollapse {
                display: inline-block;
                margin-bottom: 10px;
            }
        }

        .content-card {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
        }

        #sidebarCollapse {
            display: none;
        }
    </style>

</head>

<body>

    <div class="d-flex">

        <!-- Sidebar -->
        <nav id="sidebar">

            <a class="nav-link @(ViewBag.ActiveMenu=="Country"?"active":"")"
               href="@Url.Action("CountryMaster","Master")">
                Country Master
            </a>

            <a class="nav-link @(ViewBag.ActiveMenu=="State"?"active":"")"
               href="@Url.Action("StateMaster","Master")">
                State Master
            </a>
            <a class="nav-link @(ViewBag.ActiveMenu=="City"?"active":"")"
               href="@Url.Action("CityMaster","Master")">
                City Master
            </a>
            <a class="nav-link @(ViewBag.ActiveMenu=="City"?"active":"")"
               href="@Url.Action("PinCodeMaster","Master")">
                PinCode Master
            </a>
            <a class="nav-link @(ViewBag.ActiveMenu=="City"?"active":"")"
               href="@Url.Action("CountryImport","Master")">
                Country Import
            </a>
            <a class="nav-link @(ViewBag.ActiveMenu=="City"?"active":"")"
               href="@Url.Action("UserMAsterImport","Master")">
                User Master Import
            </a>
        </nav>

        <!-- Page Content -->
        <div id="content" class="w-100">

            <!-- Mobile Toggle Button -->
            <button class="btn btn-primary d-lg-none mb-3"
                    id="sidebarCollapse">
                ☰ Menu
            </button>

            <!-- Page Content -->
            <div class="content-card">
                @RenderBody()
            </div>

        </div>

    </div>

    <!-- Bootstrap JS (optional but good practice) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle Safe Ready -->
    <script>
        $(function () {
            $("#sidebarCollapse").on("click", function () {
                $("#sidebar").toggleClass("active");
            });
        });
    </script>

</body>
</html>
