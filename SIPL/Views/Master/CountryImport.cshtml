
@{
    ViewBag.Title = "CountryImport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="container mt-3">
        <!-- Card / Form Wrapper -->
        <div class="card shadow-sm">
            <!-- Header -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <span>Import Country</span>
                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#countryForm" aria-expanded="true">
                    &#x25B2;
                </button>
            </div>

            <!-- Collapsible Form -->
            <div class="collapse show EnterPressNext" id="countryForm">
                <div class="card-body">

                    <form method="post" class="EnterPressNext" id="frmCountry" enctype="multipart/form-data" action="/Master/CountryImport">

                        <h1>Note :</h1>

                        <!--Input File-->
                        <input type="file" name="File" id="File" />



                        <!-- Buttons -->
                        <div class="row mt-3">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success execute me-2" id="ImportFile">
                                    Import
                                </button>

                                <a href="/Master/DownloadCountryMasterTemplate" class="btn btn-success">
                                    Download Template
                                </a>
                                @*<button type="button" class="btn btn-warning me-2" id="btnReset"><i class="fa fa-refresh" aria-hidden="true"></i> Reset</button>*@


                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>


    @if (Session["Format"] != null)
    {
        <label class="bg-light m-4 p-4 border border-2 p-2 d-block">
            @Session["Format"]
            
        </label>

    }

    @if (Session["Error"] != null || TempData["Message"] != null)
    {

     <label class="bg-light m-4 p-4 border border-2 border-warning d-block">

         @if (TempData["Message"] != null)
         {
             @TempData["Message"]
         }

         @if (Session["Error"] != null)
         {
             <a href="@Url.Action("DownloadImportError")"
                class="btn btn-success mt-2">
                 Download Import Report
             </a>

         }

     </label>
    }



    <div class="mt-4" id="dvGrid"></div>

</div>



