@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Script/StateMaster.js"></script>
<div class="container mt-3">


    <div class="container-fluid">

        <!-- Card / Form Wrapper -->
        <div class="card shadow-sm">

            <!-- Header -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <span>State Master</span>
                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#stateForm" aria-expanded="true">
                    &#x25B2;
                </button>
            </div>

            <!-- Collapsible Form -->
            <div class="collapse show" id="stateForm">
                <div class="card-body">
                    <form class="EnterPressNext" id="frmState">

                        <!-- Country Code -->
                        <div class=" mb-3 row align-items-center">
                            <label for="ddlCountry" class="col-sm-2 col-form-label text-end">
                                Country <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input onkeyup="AutoComplete('txtCountryCode','GetCountry')" placeholder="Country" class="form-control" type="text" id="txtCountryCode" />

                            </div>
                            <!-- State Code -->
                            <label for="txtStateCode" class="col-sm-2 col-form-label text-end">
                                State Code <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input placeholder="State Code" type="text" class="form-control" id="txtStateCode" maxlength="10" required>
                            </div>
                        </div>



                        <!-- State Name -->
                        <div class="mb-3 row align-items-center">
                            <label for="txtStateName" class="col-sm-2 col-form-label text-end">
                                State Name <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input placeholder="State Name" type="text" class="form-control" id="txtStateName" maxlength="50" required>
                            </div>
                            <!-- Active -->
                            <label class="col-sm-2 col-form-label text-end">
                                Active
                            </label>
                            <div class="col-sm-3 ps-5  form-check form-switch">
                                <input class="form-check-input " type="checkbox" id="StateActive">
                            </div>
                        </div>




                        <!-- Buttons -->
                        <div class="row mt-3">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <!-- Save Button -->

                                <button type="button" class="btn btn-success me-2 execute" id="btnStateSave">
                                    Save
                                </button>
                                <button type="button" class="btn btn-warning me-2" id="StateReset"> <i class="fa fa-refresh" aria-hidden="true"></i>Reset</button>
                                <button  type="button" class="btn btn-primary me-2" id="ExportExcel"> <i class="fa fa-download" aria-hidden="true"></i>Export</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4" id="dvStateGrid">

    </div>


</div>
