
@{
    ViewBag.Title = "PinCodeMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Script/PinCodeMaster.js"></script>
<div class="container mt-3">


    <div class="container-fluid">

        <!-- Card / Form Wrapper -->
        <div class="card shadow-sm">

            <!-- Header -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <span>PinCode Master</span>
                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#PinCodeForm" aria-expanded="true">
                    &#x25B2;
                </button>
            </div>

            <!-- Collapsible Form -->
            <div class="collapse show" id="PinCodeForm">
                <div class="card-body">
                    <form class="EnterPressNext" id="frmPinCode">

                        <!----- For PinCode ID-->

                        <input hidden class="form-control" type="text" id="txtPinCodeID" />

                        <!-- Country Code -->
                        <div class=" mb-3 row align-items-center">
                            <label for="ddlCountry" class="col-sm-2 col-form-label text-end">
                                Country <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input onkeyup="AutoComplete('txtCountryCode','GetCountry')" placeholder="Country" class="form-control" type="text" id="txtCountryCode" />

                            </div>
                            <!-- State Code -->
                            <label for="txtStateCode" class="col-sm-2 col-form-label text-end">
                                State  <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input onkeyup="AutoComplete('txtState','GetState','txtCountryCode')" placeholder="State " type="text" class="form-control" id="txtState" maxlength="10" required>
                            </div>
                        </div>



                        <!-- City Name -->
                        <div class="mb-3 row align-items-center">
                            <label for="txtCityName" class="col-sm-2 col-form-label text-end">
                                City <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input onkeyup="AutoComplete('txtCityName','GetCity','txtState')" placeholder="City " type="text" class="form-control" id="txtCityName" maxlength="50" required>
                            </div>

   
                            <!--PInCode-->
                            <label for="txtPinCode" class="col-sm-2 col-form-label text-end">
                                Pin Code <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-3">
                                <input oninput="this.value = this.value.replace(/\D/g,'').slice(0,6)"  placeholder="Pin Code" type="text" class="form-control" id="txtPinCode" maxlength="6" required>
                            </div>
                            <!-- Active -->

                        </div>
                        <div class="mb-3 row align-items-center">
                            <label class="col-sm-2 col-form-label text-end">
                                Active
                            </label>
                            <div class="col-sm-3 ps-5  form-check form-switch">
                                <input class="form-check-input " type="checkbox" id="PinCodeActive">
                            </div>

                        </div>




                        <!-- Buttons -->
                        <div class="row mt-3">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <!-- Save Button -->

                                <button type="button" class="btn btn-success me-2 execute" id="btnPinCodeSave">
                                    Save
                                </button>
                                <button type="button" class="btn btn-warning me-2" id="PinCodeReset"> <i class="fa fa-refresh" aria-hidden="true"></i>Reset</button>
                                <button hidden type="button" class="btn btn-primary me-2" id="ExportExcel"> <i class="fa fa-download" aria-hidden="true"></i>Export</button>
                                <button type="button" class="btn btn-primary me-2" id="ExportPinCodeExcel"> <i class="fa fa-download" aria-hidden="true"></i>Export</button>

                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4" id="dvPinCodeGrid">

    </div>


</div>

